# Railway Deployment Configuration for Staging
# This file should be placed in the root directory for Railway deployment

# Build Command
build:
  dockerfile: Dockerfile

# Environment Variables (set these in Railway dashboard)
# DATABASE_URL - Neon staging database
# JWT_SECRET - Secure staging JWT secret
# FRONTEND_URL - Vercel staging frontend URL
# BACKEND_URL - Railway staging backend URL
# STORAGE_BUCKET - S3 staging bucket
# STORAGE_ACCESS_KEY - S3 staging access key
# STORAGE_SECRET_KEY - S3 staging secret key
# STRIPE_SECRET_KEY - Stripe test secret key
# STRIPE_WEBHOOK_SECRET - Stripe test webhook secret
# PLATFORM_COMMISSION_RATE - 0.10
# ENABLE_ADMIN_FEATURES - true
# ENABLE_SANDBOX_MODE - true

# Health Check
healthcheckPath: /api/health
restartPolicyType: ON_FAILURE

# Port
port: 3001

# Environment
NODE_ENV: staging</content>
