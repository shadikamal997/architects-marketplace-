# ===========================
# ARCHITECTS MARKETPLACE - ENVIRONMENT CONFIGURATION
# ===========================

# Copy this file to .env and fill in your actual values
# Never commit .env to version control

# ===========================
# DATABASE (Neon PostgreSQL)
# ===========================
# Get from Neon console: https://console.neon.tech
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# ===========================
# SERVER CONFIGURATION
# ===========================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ===========================
# JWT AUTHENTICATION
# ===========================
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET="your-secure-jwt-secret-here"

# ===========================
# FILE STORAGE (AWS S3)
# ===========================
STORAGE_PROVIDER="aws-s3"
STORAGE_BUCKET="your-s3-bucket-name"
STORAGE_REGION="us-east-1"
STORAGE_ACCESS_KEY="your-aws-access-key"
STORAGE_SECRET_KEY="your-aws-secret-key"

# ===========================
# PAYMENTS (Stripe)
# ===========================
# Get from Stripe Dashboard: https://dashboard.stripe.com
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# ===========================
# COMMISSION RATE (Fixed - Do Not Change)
# ===========================
PLATFORM_COMMISSION_RATE=0.10

# ===========================
# FEATURE FLAGS
# ===========================
ENABLE_ADMIN_FEATURES=true
ENABLE_SANDBOX_MODE=false

# ===========================
# ENVIRONMENT SPECIFIC NOTES
# ===========================

# Development:
# - Use test Stripe keys
# - Use local database or dev Neon instance
# - FRONTEND_URL=http://localhost:3000
# - BACKEND_URL=http://localhost:3001

# Staging:
# - Use test Stripe keys
# - Use staging Neon database
# - FRONTEND_URL=https://staging.yourdomain.com
# - BACKEND_URL=https://api-staging.yourdomain.com

# Production:
# - Use live Stripe keys
# - Use production Neon database
# - FRONTEND_URL=https://yourdomain.com
# - BACKEND_URL=https://api.yourdomain.com
# - ENABLE_ADMIN_FEATURES=false
# - ENABLE_SANDBOX_MODE=false
